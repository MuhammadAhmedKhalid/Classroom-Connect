@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <section class="hero-section">

                <h1 class="text-center mb-4">@ViewData["Title"]</h1>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center mb-4">Create a new account.</h2>

                <!-- Validation summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label text-muted">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Name and Phone Number input (in one row) -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Name" class="form-control" placeholder="John Doe" />
                                <label asp-for="Input.Name" class="form-label text-muted">Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="(123) 456-7890" />
                                <label asp-for="Input.PhoneNumber" class="form-label text-muted">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Password and Confirm Password input (in one row) -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                                <label asp-for="Input.ConfirmPassword" class="form-label text-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Street Address and City input (in one row) -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.StreetAddress" class="form-control" placeholder="123 Main St" />
                                <label asp-for="Input.StreetAddress" class="form-label text-muted">Street Address</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.City" class="form-control" placeholder="City" />
                                <label asp-for="Input.City" class="form-label text-muted">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- State and Postal Code input (in one row) -->
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.State" class="form-control" placeholder="State" />
                                <label asp-for="Input.State" class="form-label text-muted">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.PostalCode" class="form-control" placeholder="12345" />
                                <label asp-for="Input.PostalCode" class="form-label text-muted">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit button -->
                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg">Register</button>

                <div class="text-center mt-3">
                    <p>
                            Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                    </p>
                </div>

            </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
